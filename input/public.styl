}

.first-page
	position relative
	.bg
		height 980px
		background url() center center no-repeat
	.layout-first
	.layout-second
	.layout-three
		position absolute
		left 50%
		top 0
		img
			display block
	.layout-first
		margin-top 160px
		margin-left -535px
	.layout-second
		margin-left 61px
		margin-top 280px
	.layout-three
		margin-left -426px
